{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "files": {
    "includes": ["packages/*/src/**/*"],
    "maxSize": 2000000
  },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useNodejsImportProtocol": "warn",
        "useShorthandFunctionType": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "trailingCommas": "es5"
    }
  },
  "overrides": [
    {
      "includes": ["**/generated/**", "**/*.generated.*"],
      "linter": {
        "enabled": false
      },
      "formatter": {
        "enabled": false
      }
    },
    {
      "includes": [
        "**/*.spec.*",
        "**/*.test.*",
        "**/*.e2e.*",
        "**/__tests__/**",
        "**/__mocks__/**",
        "**/__scaffold__/**"
      ],
      "linter": {
        "enabled": false
      }
    },

    {
      "includes": ["packages/openapi-e2e/**", "packages/spanner-mock/**"],
      "linter": {
        "enabled": false
      }
    }
  ]
}
