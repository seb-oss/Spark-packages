{
  "openapi": "3.0.0",
  "info": {
    "title": "Market data API",
    "version": "1.0.0"
  },
  "paths": {
    "/markets": {
      "get": {
        "summary": "Get a paginated list of all markets",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MarketListResponse"
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "403": { "$ref": "#/components/responses/Forbidden" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "500": { "$ref": "#/components/responses/InternalServerError" }
        }
      }
    },
    "/markets/{mic}": {
      "get": {
        "summary": "Get a specific market by MIC",
        "parameters": [
          {
            "name": "mic",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MarketEntityResponse"
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "403": { "$ref": "#/components/responses/Forbidden" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "500": { "$ref": "#/components/responses/InternalServerError" }
        }
      }
    },
    "/markets/{mic}/instruments": {
      "get": {
        "summary": "Get a list of instruments for a specific market",
        "parameters": [
          {
            "name": "mic",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "data_types",
            "in": "query",
            "required": false,
            "schema": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["INDICIES", "STOCKS", "FUNDS"]
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InstrumentListResponse"
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "403": { "$ref": "#/components/responses/Forbidden" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "500": { "$ref": "#/components/responses/InternalServerError" }
        }
      }
    },
    "/markets/{mic}/instruments/{isin}/{currency}": {
      "get": {
        "summary": "Get a specific instrument by ISIN, MIC, and currency",
        "parameters": [
          {
            "name": "mic",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "isin",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "currency",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InstrumentEntityResponse"
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "403": { "$ref": "#/components/responses/Forbidden" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "500": { "$ref": "#/components/responses/InternalServerError" }
        }
      }
    },
    "/instruments/{isin}": {
      "get": {
        "summary": "Get all instruments with a specific ISIN across markets",
        "parameters": [
          {
            "name": "isin",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InstrumentListResponse"
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "403": { "$ref": "#/components/responses/Forbidden" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "500": { "$ref": "#/components/responses/InternalServerError" }
        }
      }
    }
  },
  "components": {
    "responses": {
      "Unauthorized": {
        "description": "Unauthorized",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      },
      "Forbidden": {
        "description": "Forbidden",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      },
      "NotFound": {
        "description": "Not Found",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      },
      "InternalServerError": {
        "description": "Internal Server Error",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      }
    },
    "schemas": {
      "MarketListItem": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "required": ["id", "name"]
      },
      "Market": {
        "allOf": [
          { "$ref": "#/components/schemas/MarketListItem" },
          {
            "type": "object",
            "properties": {
              "service": {
                "type": "string"
              },
              "provider": {
                "type": "string"
              },
              "access": {
                "type": "string"
              },
              "feed": {
                "type": "integer"
              },
              "mic": {
                "type": "string"
              },
              "min_delay_secs": {
                "type": "integer"
              },
              "max_delay_secs": {
                "type": "integer"
              },
              "country": {
                "type": "integer"
              },
              "data_types": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "service",
              "provider",
              "access",
              "feed",
              "mic",
              "min_delay_secs",
              "max_delay_secs",
              "country",
              "data_types"
            ]
          }
        ]
      },
      "MarketListResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "data": { "$ref": "#/components/schemas/MarketListItem" },
                "links": { "$ref": "#/components/schemas/SelfLink" }
              }
            }
          },
          "links": {
            "$ref": "#/components/schemas/PaginationLinks"
          },
          "meta": {
            "$ref": "#/components/schemas/PaginationMeta"
          }
        },
        "required": ["data", "links"]
      },
      "MarketEntityResponse": {
        "type": "object",
        "properties": {
          "data": {
            "$ref": "#/components/schemas/Market"
          },
          "links": { "$ref": "#/components/schemas/SelfLink" }
        },
        "required": ["data", "links"]
      },
      "InstrumentListItem": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "feed": {
            "type": "integer"
          },
          "ticker": {
            "type": "string"
          },
          "isin": {
            "type": "string"
          },
          "currency": {
            "type": "string"
          },
          "instrument_type": {
            "type": "string"
          },
          "instrument_subtype": {
            "type": "string"
          },
          "full_name": {
            "type": "string"
          },
          "feed_code": {
            "type": "string"
          },
          "mic": {
            "type": "string"
          },
          "links": {
            "type": "object",
            "properties": {
              "self": {
                "type": "string"
              },
              "related": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "Instrument": {
        "allOf": [{ "$ref": "#/components/schemas/InstrumentListItem" }]
      },
      "InstrumentListResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "data": { "$ref": "#/components/schemas/InstrumentListItem" },
                "links": { "$ref": "#/components/schemas/SelfLink" }
              }
            }
          },
          "links": {
            "$ref": "#/components/schemas/PaginationLinks"
          },
          "meta": {
            "$ref": "#/components/schemas/PaginationMeta"
          }
        },
        "required": ["data", "links"]
      },
      "InstrumentEntityResponse": {
        "type": "object",
        "properties": {
          "data": {
            "$ref": "#/components/schemas/Instrument"
          },
          "links": {
            "$ref": "#/components/schemas/SelfLink"
          }
        },
        "required": ["data", "links"]
      },
      "SelfLink": {
        "type": "object",
        "properties": {
          "self": {
            "type": "string"
          }
        },
        "required": ["self"]
      },
      "PaginationLinks": {
        "type": "object",
        "properties": {
          "self": {
            "type": "string"
          },
          "next": {
            "type": "string"
          },
          "prev": {
            "type": "string"
          },
          "last": {
            "type": "string"
          },
          "first": {
            "type": "string"
          }
        },
        "required": ["self"]
      },
      "PaginationMeta": {
        "type": "object",
        "properties": {
          "totalItems": {
            "type": "integer"
          },
          "itemsPerPage": {
            "type": "integer"
          },
          "totalPages": {
            "type": "integer"
          },
          "currentPage": {
            "type": "integer"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          }
        },
        "required": ["code", "message"]
      }
    }
  }
}
